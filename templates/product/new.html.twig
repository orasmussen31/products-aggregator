{% extends 'base.html.twig' %}

{% block title %}New Product{% endblock %}

{% block body %}
    <div class="max-w-3xl mx-auto">
        <!-- Header Section -->
        <div class="mb-8 flex flex-col md:flex-row md:justify-between md:items-center">
            <h1 class="text-3xl font-bold text-gray-800 mb-4 md:mb-0">Create New Product</h1>
            <a href="{{ path('app_product_index') }}" class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Back to Product List
            </a>
        </div>

        <!-- Form Section -->
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
            {{ include('product/_form.html.twig') }}
        </div>
    </div>
{% endblock %}