            {{ form_errors(form.image, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
        </div>

        <!-- Category field -->
        <div class="mb-4">
            {{ form_label(form.category, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
            {{ form_widget(form.category, {'attr': {'class': 'mt-1 block w-full rounded-md border border-gray-500 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm'}}) }}
            {{ form_errors(form.category, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
        </div>

        <!-- Color field -->
        <div class="mb-4">
            {{ form_label(form.color, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
