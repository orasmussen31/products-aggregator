            {{ form_errors(form.color, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
        </div>

        <!-- Size field -->
        <div class="mb-4">
            {{ form_label(form.weight, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
            {{ form_widget(form.weight, {'attr': {'class': 'mt-1 block w-full rounded-md border border-gray-500 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm'}}) }}
            {{ form_errors(form.weight, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
        </div>

        <!-- Platform field -->
        <div class="mb-4">
            {{ form_label(form.platform, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
            {{ form_widget(form.platform, {'attr': {'class': 'mt-1 block w-full rounded-md border border-gray-500 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm'}}) }}
            {{ form_errors(form.platform, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
        </div>

        <!-- Platform field -->
        <div class="mb-4">
            {{ form_label(form.siteName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
            {{ form_widget(form.siteName, {'attr': {'class': 'mt-1 block w-full rounded-md border border-gray-500 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm'}}) }}
            {{ form_errors(form.siteName, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
        </div>

        <!-- Status field -->
        <div class="mb-4">
            {{ form_label(form.status, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
            {{ form_widget(form.status, {'attr': {'class': 'h-4 w-4 rounded border border-gray-500 text-blue-600 focus:ring-blue-500'}}) }}
            {{ form_errors(form.status, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
        </div>
    </div>

    <div class="mt-6 pt-5 border-t border-gray-200">
        <button type="submit"
                class="w-full sm:w-auto inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            {{ button_label|default('Save') }}
        </button>
    </div>
    {{ form_end(form) }}
</div>
