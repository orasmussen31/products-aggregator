<div class="bg-white shadow rounded-lg p-6">
    {{ form_start(form) }}
    <div class="space-y-4">
        <!-- Name field -->
        <div class="mb-4">
            {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'mt-1 block w-full rounded-md border-2 border-gray-700 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm'}}) }}
            {{ form_errors(form.name, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
        </div>

        <!-- Description field -->
        <div class="mb-4">
            {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
            {{ form_widget(form.description, {'attr': {'rows': '6', 'class': 'mt-1 block w-full rounded-md border-2 border-gray-700 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm'}}) }}
            {{ form_errors(form.description, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
        </div>

        <!-- Price field -->
        <div class="mb-4">
            {{ form_label(form.price, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
